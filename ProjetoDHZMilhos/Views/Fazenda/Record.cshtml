@using ProjetoDHZMilhos.Models.Fazenda
@model FazendaModel

<div>
    <h3>@(Model.ID == 0 ? "Cadastrar Fazenda" : "Editar Fazenda")</h3>
    <form asp-controller="Fazenda" asp-action="Save" method="post">
        <!-- Campo oculto para o ID (não editável) -->
        <input type="hidden" asp-for="ID" />

        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" class="form-control" asp-for="Nome" />
        </div>

        <div class="form-group">
            <label for="Endereco">Endereço</label>
            <input type="text" id="Endereco" class="form-control" asp-for="Endereco" />
        </div>

        <div class="form-group">
            <label for="Tamanho">Tamanho (hectares)</label>
            <input type="number" id="Tamanho" class="form-control" asp-for="Tamanho" />
        </div>

        <button type="submit" class="btn btn-primary float-end m-1">Salvar</button>
        <a type="button" class="btn btn-secondary float-end m-1" asp-controller="Fazenda" asp-action="Index">Voltar</a>
    </form>
</div>
